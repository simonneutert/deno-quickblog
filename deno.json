{
  "name": "@simonneutert/quickblog",
  "version": "0.0.1",
  "exports": "./mod.ts",
  "description": "A simple static-site-generator (blog) built with Deno (and a little Preact).",
  "license": "MIT",
  "tasks": {
    "dev": {
      "command": "deno fmt",
      "dependencies": [
        "dev-watch",
        "serve",
        "polish"
      ]
    },
    "new": "deno run --allow-env --allow-write --allow-read mod.ts new",
    "build": "deno run --allow-read --allow-write --allow-env mod.ts build",
    "dev-watch": "deno run --allow-read --allow-write --allow-env --watch mod.ts build",
    "polish": "deno fmt && deno lint && deno check",
    "serve": "deno run --allow-net --allow-read jsr:@std/http/file-server dist/ -p 8080"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "mod.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "tests",
      "demo",
      "dist",
      "coverage",
      "justfile",
      "mise.toml",
      "docs",
      ".github"
    ]
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@preact/compat": "npm:@preact/compat@^18.3.1",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "preact": "npm:preact@10.28.3",
    "preact-render-to-string": "npm:preact-render-to-string@6.6.5",
    "prismjs": "npm:prismjs@1.30.0",
    "@deno/gfm": "jsr:@deno/gfm@^0.12.0",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9"
  }
}
